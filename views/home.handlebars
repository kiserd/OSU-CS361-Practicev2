<br>
<div class="container-fluid">
    <h3>Add a Set:</h3>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">name</th>
                <th scope="col">reps</th>
                <th scope="col">weight</th>
                <th scope="col">date</th>
                <th scope="col">unit</th>
                <th scope="col">add</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <input type="text" class="form-control" id="nameInput" placeholder="exercise name">
                </td>
                <td>
                    <input type="number" class="form-control" id="repsInput" placeholder="# reps">
                </td>
                <td>
                    <input type="number" class="form-control" id="weightInput" placeholder="weight">
                </td>
                <td>
                    <input type="date" class="form-control" id="dateInput">
                </td>
                <td>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="unitInput" id="lbRadio" value=0>
                        <label class="form-check-label" for="lbRadio">lb</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="unitInput" id="kgRadio" value=1>
                        <label class="form-check-label" for="kgRadio">kg</label>
                    </div>
                </td>
                <td>
                    <button type="submit" class="btn btn-primary" id="submitNewExercise">Add</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<br>
<div class="container-fluid">
    <h3>Current Table:</h3>
    <table class="table">
        <thead>
            <tr>
                <th scope="col" class="d-none">id</th>
                <th scope="col">name</th>
                <th scope="col">reps</th>
                <th scope="col">weight</th>
                <th scope="col">date</th>
                <th scope="col">unit</th>
                <th scope="col">edit</th>
                <th scope="col">delete</th>

            </tr>
        </thead>
        <tbody id="dispTbody">
            {{#each rows}}
            <tr>
                <td class ="d-none">
                    <input type="number" class="form-control" value={{this.id}} readonly>
                </td>
                <td>
                    <input type="text" class="form-control" value="{{this.name}}" readonly>
                </td>
                <td>
                    <input type="number" class="form-control" value={{this.reps}} readonly>
                </td>
                <td>
                    <input type="number" class="form-control" value={{this.weight}} readonly>
                </td>
                <td>
                    <input type="date" class="form-control" value={{this.date}} readonly>
                </td>
                <td>
                    <input type="text" class="form-control" value={{this.unit}} readonly>
                </td>
                <td>
                    <button type="submit" class="btn btn-primary">Edit</button>
                </td>
                <td>
                    <button type="submit" class="btn btn-primary">Delete</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<br>
<div class="container-fluid">
    <button type="submit" class="btn btn-primary" id="resetTable">Reset Table</button>    
</div>